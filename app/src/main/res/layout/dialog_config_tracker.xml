<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/cb_time_elapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_time_elapsed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_reel_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_number_of_reels_scrolled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_time_elapsed" />
</androidx.constraintlayout.widget.ConstraintLayout>